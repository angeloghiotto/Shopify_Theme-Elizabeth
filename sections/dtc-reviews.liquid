<div class="home-page-review-section-{{ section.id }}" data-section-id="{{ section.id }}" data-section-type="collection-template" data-aos="fade-up">
  <div class="page-width reviews-container">
    <div class="variant_home_page_reviews">
      <div class="variant_title">
        <h2 class="section-header__title">{{ section.settings.title }}</h2>
        <div class="main_review_container">
          <ul class="main_review_stars">
            <li>
              <img loading="lazy" height="21" width="104" src="{{ '4_5red-stars.svg' | file_url }}" alt="stars">
            </li>
          </ul>
          <p>4.7/5 Average rating</p>
        </div>
      </div>
      <div id="reviews_slider" class="reviews_slider">
        {% for block in section.blocks %}
        <div class="review_item">
          <div class="review_content">
            <div class="review_user">
              <div class="profile_pic">
                {{ block.settings.profile_image | image_url: width: 45 | image_tag }}
              </div>
              <div>
                <h4 class="review_name">{{ block.settings.name }}</h4>
                <ul class="review_stars">
                  <li>
                    <img loading="lazy" src="{{ 'red-stars.svg' | file_url }}" height="16" width="76"  alt="stars_1">
                  </li>
                </ul>
              </div>
            </div>
            <p class="review_description">{{ block.settings.review_description }}</p>
          </div>
          <div class="review_image">
            {{ block.settings.review_image | image_url: width: 353 | image_tag }}
          </div>
        </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>

<script>
  $(document).ready(function () {
    if (window.innerWidth <= 1200) { 
      var reviewSlider = document.getElementById('reviews_slider');
      $(reviewSlider).slick({
        dots: true,
        slidesToShow: 1,
        centerMode: true,
        responsive: [
          {
            breakpoint: 768,
            settings: {
              arrows: false,
              slidesToShow: 1,
              centerMode: true,
            },
          },
          {
            breakpoint: 1200,
            settings: {
              arrows: false,
              slidesToShow: 2,
              centerMode: true,
            },
          }
        ]
      });
    }
  });
</script>

<script src="https://unpkg.com/aos@next/dist/aos.js"></script>
  <script>
    AOS.init({});
  </script>

{% schema %}
  {
    "name": "DTC Reviews",
    "tag": "section",
    "class": "slideshow",
    "limit": 1,
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Section Title",
        "default": "Loved by 100,000+ moms"
      }
    ],
    "max_blocks": 3,
    "blocks": [
       {
         "name": "Review",
         "type": "slide",
         "settings": [
           {
             "type": "image_picker",
             "id": "profile_image",
             "label": "Profile Image",
             "info": "Recommended Height: 45px, Width: 45px"
           },
           {
             "type": "text",
             "id": "name",
             "label": "Reviewer Name",
             "info": "Recommended maximun characters: 26"
           },
           {
             "type": "text",
             "id": "review_description",
             "label": "Reviewer Description",
             "info": "Recommended maximun characters: 26"
           },{
             "type": "image_picker",
             "id": "review_image",
             "label": "Image",
             "info": "Recommended Height: 279px, Width: 353px"
