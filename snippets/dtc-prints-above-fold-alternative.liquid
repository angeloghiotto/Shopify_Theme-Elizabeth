<style>
    /* start of dtc print above fold snippet */
    .dtc-sbp-above-fold{
      margin-top:15px;
    }

    html .dtc-sbp-above-fold label{
      font-weight:100;
      letter-spacing:0.34px;
      font-size: 16px;
      text-transform: uppercase;
    }

    .dtc-above-fold-print-container{
      margin: 0;
      padding:0;
    }
    
    .dtc-above-fold-bg:after {
      background-image: linear-gradient(92.42deg, rgba(255, 255, 255, 0) 2.62%, #FFFFFF 91.05%);
    }
    html .dtc-above-fold-print-container .dtc-prints{
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(60px, 1fr));
      grid-gap: 20px;
      max-height: 140px;
      overflow:hidden;
      transition: max-height 0.3s ease-in-out;
      margin-bottom:15px;
    }
    .dtc-prints a{
     width: 100%;
    }

    .dtc-above-fold-print-container li {
      list-style-type: none;
      border: 1px solid transparent;
      height: 60px;
      width: 60px;
      padding: 3px;
      border-radius: 100%;
      margin:0;
    }
    .dtc-above-fold-print-container li img {
      border-radius: 100%;
    }
    html .active-print{
      border:2px solid #000;
    }
    /* end of dtc print above fold snippet */
  
    @media only screen and (max-width: 767px) {
      html .dtc-above-fold-print-container .dtc-prints{
        gap:10px;
      }
    }
  
  </style>

  {% assign current_product_handle = product.handle %}
  {% for c in product.collections %}

    {% if c.metafields.custom.other_best_selling_label != empty %}
      {% assign best_selling_label = c.metafields.custom.other_best_selling_label %}
   
    {% endif %}



    {% if c.handle == "footie-swatches" or c.handle == "romper-swatches" or c.handle=="mens-shirt-swatches" or c.handle=="mens-pants-swatches" or c.handle=="dog-sweater-swatches" or c.handle=="womens-shirt-swatches" or c.handle == "tutu" or c.handle == "plush-blanket-swatches" or c.handle == "blanket-swatches" or c.handle == "pajamas-1" or c.handle == "baby-dresses" or c.handle== "quilted-collection" or c.handle == "mom-romper" or c.handle == "mama-pants" or c.handle == "womens-short-sleeve-romper" or c.handle == "shortie-romper-swatches" or c.handle == "bubble-romper-swatches" or c.handle =="headwrap-swatch" or c.handle=="swaddle-headwrap-swatch" or c.handle=="biggie-bow-swatch" or c.handle=="backless-romper-swatch" or c.handle=="jogger-set-swatch" or c.handle=="girls-dress-swatch" or c.handle=="mama-jogger-sweatpants-swatch" or c.handle=="hat-swatch" or c.handle=="lovey-swatch" or c.handle=="womens-collar-shirt-shorts-set-swatch" or c.handle=="robe-swatches" or c.handle=="mama-dress-swatches"%}
    <div class="dtc-sbp-above-fold">
      <label class="variant__label">
      {%if best_selling_label %}
        {{"Print"}}
      {%else%}
      {{"Print"}}
      {%endif %}
    
      </label>
      <ul class="dtc-above-fold-print-container dtc-above-fold-bg">
        <div class="dtc-prints">
          {% for product in collections[c.handle].products %}
            {%- if product.metafields.custom.show_print_image -%}
              <a href="{{ product.handle }}">
                <li class = "{% if current_product_handle == product.handle %}active-print{% endif %}">
                  <img loading="lazy" src="{{ product.metafields.custom.print_image  | img_url  }}"/>
                </li>
              </a>
            {% endif %}
          {% endfor %}
        </div>
      </ul>
        <button onclick="togglePrints()" id="togglePrints" style="padding-left:0px;"><span class="size-text" style="letter-spacing: .025em!important; font-size: 13.6px!important; color: #707070!important;">Show more</span></button>
    </div>
      {% break %}
    {% endif %}
  {% endfor %}

  