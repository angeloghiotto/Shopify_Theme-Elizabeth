<style>
    /* start of dtc print above fold snippet */
    .dtc-sbp-above-fold{
      margin-top:15px;
    }

    .dtc-above-fold-print-container {
      display: flex;
      position: relative;
      margin: 0;
      margin-left: -3px;
      padding: 0;
      margin-right: -3px;
    }
    
    .dtc-above-fold-print-container:after {
      content: "";
      position: absolute;
      z-index: 1;
      top: 0;
      right: -2px;
      bottom: 15px;
      pointer-events: none;
      width: 15%;
    }
    
    .dtc-above-fold-bg:after {
      background-image: linear-gradient(92.42deg, rgba(255, 255, 255, 0) 2.62%, #FFFFFF 91.05%);
    }
    html .dtc-above-fold-print-container .dtc-sbp-content {
      white-space: nowrap;
      overflow-x: hidden;
      overflow-y: hidden;
      display: flex;
      padding-bottom: 20px;
      position:initial;
    }
    .dtc-above-fold-print-container li {
      list-style-type: none;
      border: 1px solid #C6C6C6;
      height: 60px;
      width: 60px;
      box-sizing: content-box;
      display: flex;
      padding: 3px;
      border-radius: 100%;
      margin-right: 13px;
    }
    .dtc-above-fold-print-container li img {
      border-radius: 100%;
    }
    html .active-print{
      border:1px solid #000;
    }
    .dtc-sbp-content .slick-arrow {
      color:#000;
      opacity:1;
      top:35px;
    }
    .dtc-sbp-content .slick-prev {
      left:-18px;
    }
    .dtc-sbp-content .slick-next{
      right:-14px;
    }
    /* end of dtc print above fold snippet */
  
    @media only screen and (max-width: 767px) {
      html .dtc-above-fold-print-container .dtc-sbp-content {
        overflow-x: scroll;
      }
    }
  
  </style>

  {% assign current_product_handle = product.handle %}
  {% for c in product.collections %}

    {% if c.metafields.custom.other_best_selling_label != empty %}
      {% assign best_selling_label = c.metafields.custom.other_best_selling_label %}
   
    {% endif %}



    {% if c.handle == "footie-swatches" or c.handle == "romper-swatches" or c.handle == "tutu" or c.handle == "blanket" or c.handle == "pajamas-1" or c.handle == "baby-dresses" or c.handle== "quilted-collection" or c.handle == "mom-romper" or c.handle == "mama-pants" or c.handle == "womens-short-sleeve-romper" or c.handle == "shortie-romper-swatches" or c.handle == "bubble-romper-swatches" or c.handle =="headwrap-swatch" or c.handle=="swaddle-headwrap-swatch" or c.handle=="biggie-bow-swatch" or c.handle=="backless-romper-swatch" or c.handle=="jogger-set-swatch" or c.handle=="girls-dress-swatch" or c.handle=="mama-jogger-sweatpants-swatch" or c.handle=="hat-swatch" or c.handle=="lovey-swatch" or c.handle=="womens-collar-shirt-shorts-set-swatch"%}
    <div class="dtc-sbp-above-fold">
      <label class="variant__label">Other Best Selling 
      {%if best_selling_label %}
      {{best_selling_label}}
      {%else%}
      {{"Prints"}}
      {%endif %}
    
      </label>
      <ul class="dtc-above-fold-print-container dtc-above-fold-bg">
        <div class="dtc-sbp-content">
          {% for product in collections[c.handle].products %}
            {%- if product.metafields.custom.show_print_image -%}
              <a href="{{ product.handle }}">
                <li class = "{% if current_product_handle == product.handle %}active-print{% endif %}">
                  <img loading="lazy" width="60" height="60" src="{{ product.metafields.custom.print_image  | img_url  }}"/>
                </li>
              </a>
            {% endif %}
          {% endfor %}
        </div>
      </ul>
    </div>
      {% break %}
    {% endif %}
  {% endfor %}
  
  