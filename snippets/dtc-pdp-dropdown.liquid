  newSpanFiller.innerHTML = 'runs large'
</script>
{% elsif product.metafields.custom.dtc_size_guide.value == null %}
<script>
  newBox3.style.backgroundColor = 'black'
  newFits.innerHTML = 'fits'
  newSpanFiller.innerHTML = 'true to size'
</script>
{% endif %}

</script>





