<style>

.drop-tem.dtc-bundle{
  display: none;
}

.dtc-bundle .primary-title{
  text-transform: capitalize;
}

.dtc-bundle .rebuy-bundle__images{
  width: 100%!important;
}

.icon-loader{
  width: 15%;
}

.drop-content {
  max-height: 0;
  padding: 0 16px;
  opacity: 0;
  overflow: hidden;
  transition: max-height 0.3s ease, padding 0.3s ease, opacity 0.3s ease;
}

.drop-content.show {
  max-height: 100%;
  padding: 16px;
  opacity: 1;
}

.rebuy-product-price div{
  display: flex;
}

  .drop-content.show {
    display: block;
    padding-bottom: 20px;
    }

  .drop-content.show > ul > li {
      font-family: 'Futura';
      font-style: normal;
      font-weight: 500;
      font-size: 16px;
      line-height: 200%;
      color: #000000;
    }

    .drop-content.show > h6 {
      text-transform: none;
      font-weight: 600;
      font-style: normal;
      letter-spacing: 0px;
      font-size: 17px;
      margin-bottom: 0px;
      margin-top: 0px;
      margin-left:  15px;

    }

  .drop-header {
    display: flex;
    align-items: center;
    border-top: 1px solid #EAEAEA;
    flex-direction: row;
    height: 56px;
  }

  .drop-button1,
  .drop-button2,
  .drop-button3,
  .drop-button4,
  .drop-button5 {
    display: flex;
    align-items: baseline;
    justify-content: space-between;
    width: 100%;
  }

  .drop-button5 > div > img{
    vertical-align: middle;
  }


  .drop-button1 > div > span,
  .drop-button2 > div > span,
  .drop-button3 > div > span,
  .drop-button4 > div > span,
  .drop-button5 > div > span {
    font-family: 'Futura';
    font-style: normal;
    font-weight: 500;
    font-size: 16px;
    line-height: 21px;
    align-self: center;
    text-transform: capitalize;
    color: #000000;
    
  }

  .drop-button1 > div,
  .drop-button2 > div,
  .drop-button3 > div,
  .drop-button4 > div
  .drop-button5 > div {
      display: flex;
      align-items: center;
      gap: 8px;
  }


  .arrow-drop {
    transition: transform 0.3s ease;
  }

  .arrow-drop.rotate {
    transform: rotate(180deg);
  }

  .size-table-pdp{
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 20px;
    margin-bottom: 20px;

  }

  .new-size-table-pdp > div{
    z-index: 1 !important;
    margin-bottom: 10px;

  }

  .new-size-table-pdp{
    margin-top: 10px;
  }

  .still-in-pdp{
    max-width: 70%;
    display: flex;
    justify-content: flex-end;  }

    @media (max-width:768px) {
      .dtc-pdp-dropdown{
        margin-top: 50px;
      }

      .drop-button1 > div > span,
      .drop-button2 > div > span,
      .drop-button3 > div > span,
      .drop-button4 > div > span
      .drop-button5 > div > span{
        font-size: 14px;
        line-height: 19px;
      }

      .drop-content.show > ul > li {
        font-size: 14px;
      }

      .drop-content.show > h6{
        font-size: 15px;
      }
    }
</style>

<script>
  var buttons = document.querySelectorAll('.drop-button1, .drop-button2, .drop-button3, .drop-button4, .drop-button5');
  
  buttons.forEach(function(button) {
    button.addEventListener('click', function() {
      var content = this.parentElement.nextElementSibling;
      content.classList.toggle('show');
      this.querySelector('.arrow-drop').classList.toggle('rotate');
    });
  });
</script>


<script>

const newBox1 = document.getElementById('new-box-sel-1')
const newBox2 = document.getElementById('new-box-sel-2')
const newBox3 = document.getElementById('new-box-sel-3')
const newBox4 = document.getElementById('new-box-sel-4')
const newBox5 = document.getElementById('new-box-sel-5')
const newSpanFiller = document.getElementById('new-dtc-filler')
const newFits = document.getElementById('new-fits-span')
</script>

{% if product.metafields.custom.dtc_size_guide.value contains 'Runs small' %}
