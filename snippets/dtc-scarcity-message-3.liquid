{%- comment -%}
  <div class="dtc-reserved-product-3">
  <div class="ringring"></div>
  <div class="circle"></div>
  <span id="green-dot"></span>
  </div>

  <script>
  const min = parseInt("1");
  const max = parseInt("4");
  const green = document.getElementById('green-dot');
  const a = Math.floor(Math.random() * (max - min + 1)) + min;
  if(a == 1){
  green.innerHTML = `${a} other person is shopping the items in your cart`;
  }else{
  green.innerHTML = `${a} other people are shopping the items in your cart`;
  }
  </script>

  <style>
  .dtc-reserved-product-3 {
  display: none;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  padding: 8px 10px;
  gap: 8px;
  isolation: isolate;
  max-width: 100vw;
  max-height: 46px;
  background: #FBFBFB;
  border: 1px solid #E9E9E9;
  border-radius: 4px;
  margin-bottom: 15px;
  margin-top: 15px;

  }
  #green-dot {
  font-style: normal;
  font-weight: 400;
  line-height: 20px;
  color: #353535;
  }
  .circle {
  width: 8px;
  height: 8px;
  background-color: #62bd19;
  border-radius: 50%;
  position: absolute;
  margin-left: -338px; 
  }

  .ringring {
  border: 3px solid #62bd19;
  -webkit-border-radius: 30px;
  height: 16px;
  width: 16px;
  position: absolute;
  -webkit-animation: pulsate 1s ease-out;
  -webkit-animation-iteration-count: infinite; 
  opacity: 0.0;
  margin-left: -338px; 
  }
  @-webkit-keyframes pulsate {
  0% {-webkit-transform: scale(0.1, 0.1); opacity: 0.0;}
  50% {opacity: 1.0;}
  100% {-webkit-transform: scale(1.2, 1.2); opacity: 0.0;}
  }

  @media only screen and (max-width: 420px) {
  .dtc-reserved-product {
  margin-top: 0;
  }
  #green-dot {
  margin-left: 15px;
  }
  .circle {
  margin-left: -318px; 
  }
  .ringring {
  margin-left: -318px; 
  }
  }
  @media only screen and (max-width: 377px) {
  #green-dot {
  margin-left: 10px;
  }
  }

  @media only screen and (max-width: 364px) {
  #green-dot {
  margin-left: 6px;
  }
  }
  </style>
